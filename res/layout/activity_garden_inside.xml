<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inside_garden"
            android:text="@string/MyGarden"
            android:textSize="30sp"
            android:fontFamily="@font/font_title"
            android:textColor="@color/white"
            android:background="@color/brown_dark"
            android:paddingTop="14dp"
            android:paddingLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Garden A"
            android:textSize="30sp"
            android:fontFamily="@font/font_title"
            android:textColor="@color/black"
            android:background="#D9D9D9"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/garden_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/a_1"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:src="@drawable/a_1" />

            <ImageView
                android:id="@+id/a_2"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:src="@drawable/a_2"
                android:layout_marginLeft="1dp" />

            <ImageView
                android:id="@+id/a_3"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:src="@drawable/a_3"
                android:layout_marginLeft="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/a_1_bar"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="개수 : 0개"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/a_2_bar"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="개수 : 0개"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/a_3_bar"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="개수 : 0개"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Garden B"
            android:textSize="30sp"
            android:fontFamily="@font/font_title"
            android:textColor="@color/black"
            android:background="#D9D9D9"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/garden_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/b_1"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:src="@drawable/b_1" />

            <ImageView
                android:id="@+id/b_2"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:src="@drawable/b_2"
                android:layout_marginLeft="1dp" />

            <ImageView
                android:id="@+id/b_3"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:src="@drawable/b_3"
                android:layout_marginLeft="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b_1_bar"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="개수 : 0개"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/b_2_bar"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="개수 : 0개"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/b_3_bar"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="개수 : 0개"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Garden C"
            android:textSize="30sp"
            android:fontFamily="@font/font_title"
            android:textColor="@color/black"
            android:background="#D9D9D9"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/garden_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/c_1"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:src="@drawable/c_1" />

            <ImageView
                android:id="@+id/c_2"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:src="@drawable/c_2"
                android:layout_marginLeft="1dp" />

            <ImageView
                android:id="@+id/c_3"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:src="@drawable/c_3"
                android:layout_marginLeft="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c_1_bar"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="개수 : 0개"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/c_2_bar"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="개수 : 0개"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/c_3_bar"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="개수 : 0개"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Garden D"
            android:textSize="30sp"
            android:fontFamily="@font/font_title"
            android:textColor="@color/black"
            android:background="#D9D9D9"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <GridLayout
            android:id="@+id/garden_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="1">

            <TableRow>
                <ImageView
                    android:id="@+id/d_1"
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    android:src="@drawable/d_1" />

                <ImageView
                    android:id="@+id/d_2"
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    android:src="@drawable/d_2"
                    android:layout_marginLeft="1dp" />

                <ImageView
                    android:id="@+id/d_3"
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    android:src="@drawable/d_3"
                    android:layout_marginLeft="1dp" />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/d_1_bar"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:text="개수 : 0개"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/d_2_bar"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:text="개수 : 0개"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/d_3_bar"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:text="개수 : 0개"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</ScrollView>



